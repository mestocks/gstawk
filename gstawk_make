# path/to/assembly.fa
FPATHS = $(shell cat $(FILENAMES))

#/data/mist/test_data/Pa_can008.fa

# assembly.fa
FNAMES = $(notdir $(FNAMES))

# assembly.fa.txt
STS = $(addsuffix .txt,$(FNAMES))

#FSA = $(addprefix $(PWD)/,$(FNAMES))
#base = $(basename $(FSA))
#STS = $(addsuffix .txt,$(FSA))

###### ######

.PHONY:	print
print:	$(STS)
	echo "assembly ncontigs nbps ulen maxlen n50num n50len nonATGC"
	cat $^

###### ######

.PHONY:	stats
stats:	$(STS)

%.txt:	%
	echo -n $^" " > $@
	gstat $^ >> $@

