#! /usr/bin/make

###### ######

FNAMES = $(shell cat $(FILENAMES))
FSA = $(addprefix $(PWD)/,$(FNAMES))
#base = $(basename $(FSA))
STS = $(addsuffix .txt,$(FSA))

###### ######

.PHONY:	print
print:	$(STS)
	echo "assembly ncontigs nbps ulen maxlen n50num n50len nonATGC"
	cat $^

###### ######

.PHONY:	stats
stats:	$(STS)

%.txt:	%
	echo -n $^" " > $@
	bin/gstat.o $^ >> $@


