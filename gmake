#! /usr/bin/make

###### ######

FNAMES = $(shell cat $(FILENAMES))
FSA = $(addprefix $(PWD)/,$(FNAMES))
base = $(basename $(FSA))
STS = $(addsuffix .txt,$(base))

###### ######

.PHONY:	print
print:	$(STS)
	echo "assembly ncontigs nbps ulen maxlen n50num n50len nonATGC"
	cat $^

###### ######

.PHONY:	stats
stats:	$(STS)

$(STS):
	echo $@

%.txt:	%.fa
	echo -n $^" " > $@
	bin/gstat.o $^ >> $@


